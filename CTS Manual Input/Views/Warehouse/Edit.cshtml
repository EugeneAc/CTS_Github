@model CTS_Models.WarehouseMeasure

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Изменить данные маркшейдерского замера: @ViewBag.Name</h2>

@using (Html.BeginForm("Edit", "Warehouse", new { name = @ViewBag.Name }))
{
	@Html.AntiForgeryToken()

	@Html.AntiForgeryToken()
	<div class="form-horizontal">
		@Html.HiddenFor(m => m.WarehouseID)
		@Html.HiddenFor(m => m.ID)

		<div class="form-group">
			@Html.LabelFor(m => Model.MeasureDate, "Дата замера", new { @class = "control-label col-md-2" })
			<div class="col-lg-10 input-group date" id="datetimepicker">
				<span class="input-group-addon">
					<span class="glyphicon glyphicon-calendar"></span>
				</span>
				@Html.TextBoxFor(m => Model.MeasureDate, "{0:yyyy/MM/dd 00:00}", new { @class = "form-control datepicker" })
				@Html.ValidationMessageFor(m => Model.MeasureDate)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => Model.TotalMeasured, "Итого на складе", new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(m => Model.TotalMeasured, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(m => Model.TotalMeasured)
			</div>
		</div>

		<input type="submit" value="Сохранить" class="btn btn-primary" />
	</div>
}

