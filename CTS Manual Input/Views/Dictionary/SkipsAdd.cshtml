@using CTS_Models
@model CTS_Manual_Input.Models.Dictionary.SkipsLocations
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Добавление скипового подъема</h2>
    <br />

    @using (Html.BeginForm("SkipsAdd", "Dictionary", FormMethod.Post))
    {
        <br />
        <div class="form-horizontal">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Skip.ID)

            <div class="form-group">
                @Html.LabelFor(m => m.Skip.Location, "Расположение скипового подъема", new { @class = "control-label col-lg-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.Skip.LocationID, Model.Locations as SelectList, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Skip.Name, "Наименование на русском", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => Model.Skip.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => Model.Skip.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Skip.NameEng, "Наименование на английском", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => Model.Skip.NameEng, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => Model.Skip.NameEng)
                </div>
            </div>

			<div class="form-group">
				@Html.LabelFor(m => Model.Skip.NameKZ, "Наименование на казахском", new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(m => Model.Skip.NameKZ, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(m => Model.Skip.NameKZ)
				</div>
			</div>

            <input type="submit" value="Сохранить изменения" class="btn btn-success" />
        </div>

    }

