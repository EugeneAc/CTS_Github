@model CTS_Models.RockUtilTransfer
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить новые данные по утилизации породы : @ViewBag.Name</h2>

@using (Html.BeginForm("Add", "Utilization", new { name = @ViewBag.Name }))
{
@Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.HiddenFor(m => m.EquipID)
    @Html.HiddenFor(m => m.ID)

    <div class="form-group">
        @Html.LabelFor(m => Model.LotQuantity, "Количество породы, т", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => Model.LotQuantity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => Model.LotQuantity)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => Model.TransferTimeStamp, "Дата и время измерения", new { @class = "control-label col-md-2" })
        <div class="col-lg-10 input-group date" id="datetimepicker">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
            @Html.TextBoxFor(m => Model.TransferTimeStamp, "{0:yyyy/MM/dd HH:mm}", new { @class = "form-control datepicker" })
            @Html.ValidationMessageFor(m => Model.TransferTimeStamp)
        </div>
    </div>
    <input type="submit" value="Сохранить" class="btn btn-primary" />

</div>
}