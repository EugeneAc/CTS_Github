                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                @Html.TextBoxFor(m => Model.AnalysisTimeStamp, "{0:yyyy/MM/dd HH:mm}", new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(m => Model.AnalysisTimeStamp)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => Model.AnalysisID, "Номер пробы", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => Model.AnalysisID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => Model.AnalysisID)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => Model.AshAvg, "Зола средняя, %", new { @class = "control-label col-md-2" })
