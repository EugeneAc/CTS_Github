@model CTS_Models.BeltAnalysis
@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Изменить данные по анализам для партии</h2>

@using (Html.BeginForm("Edit", "LabBelt", FormMethod.Post))
{
@Html.AntiForgeryToken()
<div class="form-horizontal">
    <div class="form-group">
        <div class="form-group">
            @Html.LabelFor(m => Model.AnalysisTimeStamp, "Дата проведения анализа", new { @class = "control-label col-md-2" })
