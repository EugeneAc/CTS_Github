@using CTS_Models
@model CTS_Models.BeltTransfer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить новые данные по конвейерным весам : @ViewBag.Name</h2>

@using (Html.BeginForm("Add", "BeltScales", new { name = @ViewBag.Name }))
{
@Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.HiddenFor(m => m.EquipID)
    @Html.HiddenFor(m => m.ID)
    <div class="form-group">
        @Html.LabelFor(m => Model.LotName, "Идентификатор партии", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => Model.LotName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => Model.LotName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => Model.LotQuantity, "Показания весов, т", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => Model.LotQuantity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => Model.LotQuantity)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => Model.TransferTimeStamp, "Дата и время снятия показаний", new { @class = "control-label col-md-2" })
        <div class="col-lg-10 input-group date" id="datetimepicker">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
            @Html.TextBoxFor(m => Model.TransferTimeStamp, "{0:yyyy/MM/dd HH:mm}", new { @class = "form-control datepicker" })
            @Html.ValidationMessageFor(m => Model.TransferTimeStamp)
        </div>
    </div>

    <input type="submit" value="Сохранить" class="btn btn-primary" />

</div>
}