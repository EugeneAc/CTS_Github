@using System.Linq;
@model CTS_Analytics.Models.Mnemonic.Mine_rockUtil
@{ 
    var blockClass = Model.HasManualValues ? "hand-type" : "";
    var minHeightClass = Model.MinHeight ? "minheight" : "";
}

<div class="block black2 @minHeightClass @blockClass" id="@Model.DivID">
    <div class="title">
        <i class="icon icon_kamni"></i>
        @*<a href="#">@Resources.ResourceMnemonic.RocksUtilization</a>*@
        <span class="title-not-link">@Model.RockUtilName</span>
        @if (Model.HasManualValues)
        {
            <a href class="hand tooltipstered">@Resources.ResourceMnemonic.ManualInputToolTip</a>
        }
    </div>
    <div class="text">
        <div class="line">
            <span class="name">@Resources.ResourceMnemonic.RocksFromCrushingPerShift</span>
            <div class="count">@Model.RocksPerShift</div>
            <span class="caption">@Resources.ResourceMnemonic.Tonns</span>
            <div class="clearfix"></div>
        </div>
        <div class="line">
            <span class="name">@Resources.ResourceMnemonic.RocksFromCrushingPerPeriod</span>
            <div class="count">@Model.RocksPerPeriod</div>
            <span class="caption">@Resources.ResourceMnemonic.Tonns</span>
            <div class="clearfix"></div>
        </div>

        <div class="result">


            <div class="clearfix"></div>
        </div>
    </div>
</div>
