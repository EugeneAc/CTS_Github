@model IEnumerable<CTS_Analytics.Models.Mnemonic.Doc_detail.DocBeltScale>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageName = Resources.ResourceMnemonic.Thesaurus;
    ViewBag.PageSubName = @Resources.ResourceMnemonic.Conveyors_many;
}

<p class="subname"><span>@Resources.ResourceMnemonic.Thesaurus</span></p>
<div class="main">
    <h2>@Resources.ResourceMnemonic.Conveyors_many</h2>
    <table class="table table-striped table-hover sortable">
        <thead>
            <tr>
                <th>@Resources.ResourceMnemonic.Name</th>
                <th>@Resources.ResourceMnemonic.Location</th>
                <th>@Resources.ResourceMnemonic.From</th>
                <th>@Resources.ResourceMnemonic.To</th>
                <th></th>
            </tr>
        </thead>
        @if (Model != null)
        {
            foreach (var belt in Model)
            {
        <tr>
            <td>@Html.DisplayFor(modelItem => belt.Name)</td>
            <td>@Html.DisplayFor(modelItem => belt.Location)</td>
            <td>@Html.DisplayFor(modelItem => belt.FromDest)</td>
            <td>@Html.DisplayFor(modelItem => belt.ToDest)</td>
        </tr>
            }
        }
    </table>
</div>