@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageName = Resources.ResourceMnemonic.Thesaurus;
    ViewBag.PageSubName = Resources.ResourceMnemonic.KuzMineName;
}

<p class="subname"><span>Справочник</span></p>
<div class="main">

    <div class="sprav">

        <h2>
            <b>@Resources.ResourceMineInfo.KazTitle</b>
        </h2>

        <div class="anounce">
            <div class="txt">
                @Resources.ResourceMineInfo.KazShortDescr
            </div>

            <div class="pic">
                <img src="~/Content/Mnemo/pic/kazahstanskaya.jpg" alt="" />
            </div>

        </div>




        <h3>
            <b>@Resources.ResourceMineInfo.History</b>
        </h3>
        <br>
        <p>
            @Resources.ResourceMineInfo.KazHistory
        </p>
        <br>
        <br>
        <h3>
            <b>@Resources.ResourceMineInfo.Description</b>
        </h3>
        <br>
        <br>
        <p>
            @Resources.ResourceMineInfo.KazDescr
        </p>
    </div>
</div>
