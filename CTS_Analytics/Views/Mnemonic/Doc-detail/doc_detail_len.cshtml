@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageName = Resources.ResourceMnemonic.Thesaurus;
    ViewBag.PageSubName = Resources.ResourceMnemonic.KuzMineName;
}

<p class="subname"><span>Справочник</span></p>
<div class="main">

    <div class="sprav">

        <h2>@Resources.ResourceMineInfo.LenTitle</h2>

        <div class="anounce">
            <div class="txt">
                @Resources.ResourceMineInfo.LenShortDescr
            </div>

            <div class="pic">
                <img src="~/Content/Mnemo/pic/lenina.jpg" alt="" />
            </div>

        </div>
        <h3>
            <b>@Resources.ResourceMineInfo.History</b>
        </h3>
        <p>
            @Resources.ResourceMineInfo.LenHistory
        </p>
        <br>
        <h3>
            <b>@Resources.ResourceMineInfo.Description</b>
        </h3>
        <br>
        <p>
            @Resources.ResourceMineInfo.LenDescr
        </p>

    </div>


</div>