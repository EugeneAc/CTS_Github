@model IEnumerable<CTS_Analytics.Models.Mnemonic.Doc_detail.DocWagonScales>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageName = Resources.ResourceMnemonic.Thesaurus;
    ViewBag.PageSubName = @Resources.ResourceMnemonic.BoilerConsumptionNorm;
}

<p class="subname"><span>@Resources.ResourceMnemonic.Thesaurus</span></p>
<div class="main">
    <h2>@Resources.ResourceMnemonic.BoilerConsumptionNorm</h2>
    <table class="table table-striped table-hover sortable">
        <thead>
            <tr>
                <th>@Resources.ResourceMnemonic.Name</th>
                <th>@Resources.ResourceMnemonic.Location</th>
                <th></th>
            </tr>
        </thead>
        @if (Model != null)
        {
            foreach (var scales in Model)
            {
        <tr>
            <td>@Html.DisplayFor(modelItem => scales.Name)</td>
            <td>@Html.DisplayFor(modelItem => scales.Location)</td>
        </tr>
            }
        }
    </table>
</div>