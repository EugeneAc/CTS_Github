@model CTS_Analytics.Models.StaticReports.OnlyPeriodsReportModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageName = Resources.ResourceStatic.PageName;
}

<h2>@Resources.ResourceStatic.CoalProductionByMine</h2>

@using (Ajax.BeginForm("GetCoalProductionByMineReports", "Static", new AjaxOptions { UpdateTargetId = "results" }, new { @class = "form-horizontal" }))
{
    @Html.Partial("_FromDateToDate", new CTS_Analytics.Models.FromDateToDateModel() { FromDate = Model.FromDate, ToDate = Model.ToDate })

    @Html.Partial("_ReportPeriodDropdown", Model.Periods)

    <input type="submit" value=@Resources.ResourceGeneral.Refresh class="btn btn-success" name="Refresh" />

    <div id="results">
        @Html.Partial("_FileTable", new CTS_Analytics.Models.FileTableModel())
    </div>

}
