@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Subhead {
	<div class="subhead">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="text-center subname">
						<div class="name">coal tracking</div>
						<span>Приложение управления доступом</span>
					</div>
				</div>
			</div>
		</div>
	</div>
}

<br />
<div class="row">
	<div class="col-md-12">
		<div class="content">
			<div class="row mines">
				<div class="col-md-6">
					<a href='@Url.Action("RoleList")'><i></i>Перейти к управлению ролями</a>
				</div>
			</div>
		</div>
	</div>
</div>

<br />
<input type="text" id="UserLoginInput" value="Enter login" />
<input type="button" id="UserLoginBtn" value="Check" data-root="@Url.Content("~/")" />

<script>
	$(document).ready(function () {

		$('#UserLoginBtn').click(function () {


			var root = $("#UserLoginBtn").data('root');


			$.ajax({
				url: root + "Home/CheckIfUserExists/?userLogin=" + $("#UserLoginInput").val(),
				type: "POST",
				dataType: 'JSON',
				cache: false,
				async: true,
				success: function (data) {
					if (data.userFound) {
						window.location.href = root + "Home/EditUser/?userLogin=" + $("#UserLoginInput").val();
					} else {
						alert("Пользователь с доменным логином " + $("#UserLoginInput").val() + " не найден");
					}

				}
			});
		});
	});

</script>


